{
    "version": 3,
    "cmakeMinimumRequired": {
    "major": 3,
    "minor": 18,
    "patch": 0
    },
    "configurePresets": [
        {
            "name": "dev",
            "description": "Base preset for library",
            "binaryDir": "${sourceDir}/build",
            "hidden": true
        },
        {
            "name": "dev-win",
            "hidden": true,
            "installDir": "C:/Program Files/ForwardLib",
            "inherits": [ "dev" ],
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "",
                "CMAKE_C_FLAGS": ""
            }
        },
        {
            "name": "dev-win-debug",
            "inherits": [ "dev-win" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "/MTd /EHsc /w14242 /w14254 /w14263 /w14265 /w14287 /w14289 /w14296 /w14311 /w14545 /w14546 /w14547 /w14549 /w14555 /w14640 /w14826 /w14928",
                "CMAKE_C_FLAGS": "/MTd /EHsc /w14242 /w14254 /w14263 /w14265 /w14287 /w14289 /w14296 /w14311 /w14545 /w14546 /w14547 /w14549 /w14555 /w14640 /w14826 /w14928",
                "FL_ENABLE_TESTING": "ON",
                "FL_ENABLE_BENCHMARK": "ON"
            }
        },
        {
            "name": "dev-win-release",
            "inherits": [ "dev-win" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "/MT /EHsc /w14242 /w14254 /w14263 /w14265 /w14287 /w14289 /w14296 /w14311 /w14545 /w14546 /w14547 /w14549 /w14555 /w14640 /w14826 /w14928",
